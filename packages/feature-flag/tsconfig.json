{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "declaration": true,
        "outDir": "dist",
        "noEmit": false
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"]
}