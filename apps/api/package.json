{
	"name": "gefakit-api",
	"type": "module",
	"scripts": {
		"dev": "wrangler dev",
		"dev:production:yes-i-am-sure": "wrangler dev --remote --env production",
		"deploy:production:yes-i-am-sure": "wrangler deploy --minify --env production",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"types": "wrangler types",
		"db:types:development": "kysely-codegen --singularize --dialect postgres --env-file .dev.vars --out-file ./src/db/db-types.d.ts",
		"db:types:production:yes-i-am-sure": "kysely-codegen --singularize --dialect postgres --env-file .dev.vars.production --out-file ./src/db/db-types.d.ts",
		"db:migrate:development": "cross-env NODE_ENV=development tsx ./src/db/migrate.ts",
		"db:migrate:production:yes-i-am-sure": "cross-env NODE_ENV=production tsx ./src/db/migrate.ts",
		"db:migrate:test": "cross-env NODE_ENV=test tsx ./src/db/migrate.ts",
		"migrate:test": "cross-env NODE_ENV=test MIGRATE_DATABASE_URL=$TEST_DATABASE_URL ts-node ./scripts/migrate.ts",
		"db:migrate:down:development": "cross-env NODE_ENV=development tsx ./src/db/migrate-down.ts",
		"db:migrate:down:production:yes-i-am-sure": "cross-env NODE_ENV=production tsx ./src/db/migrate-down.ts",
		"db:seed:file": "cross-env NODE_ENV=development tsx ./src/db/seeds/seed-runner.ts",
		"db:drop:development": "cross-env NODE_ENV=development tsx ./src/db/seeds/drop.ts",
		"db:drop:production:yes-i-am-sure": "cross-env NODE_ENV=production tsx ./src/db/seeds/drop.ts",
		"test": "cross-env NODE_ENV=test tsx ./scripts/test.ts",
		"dev:onboard": "cross-env NODE_ENV=development tsx ./scripts/developer-onboarding.ts"
	},
	"dependencies": {
		"@gefakit/shared": "workspace:*",
		"@hono/zod-validator": "^0.4.3",
		"@neondatabase/serverless": "^1.0.0",
		"@node-rs/argon2": "^2.0.2",
		"@oslojs/binary": "^1.0.0",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"arctic": "^3.6.0",
		"bcryptjs": "^3.0.2",
		"cross-env": "^7.0.3",
		"hono": "^4.7.5",
		"kysely": "^0.27.6",
		"kysely-neon": "^1.3.0",
		"pg": "^8.15.5",
		"resend": "^4.3.0",
		"stripe": "^18.1.0",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.8.18",
		"@cloudflare/workers-types": "^4.20250410.0",
		"@faker-js/faker": "^9.7.0",
		"@types/node": "^22.14.0",
		"@types/pg": "^8.11.14",
		"dotenv": "^16.5.0",
		"execa": "^9.5.3",
		"kysely-codegen": "^0.18.3",
		"tsx": "^4.19.4",
		"vitest": "~3.0.0",
		"wrangler": "^4.10.0"
	}
}